        margin-top: 20px;
    }

    h1 {
        color: #333;
    }

    h2 {
        color: #007bff;
        margin-top: 40px;
    }

    p {
        color: #666;
        line-height: 1.6;
    }

    ul {
        list-style-type: none;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        text-decoration: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>

